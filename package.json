{
  "name": "@ai-notebook/root",
  "version": "0.0.0",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "turbo dev --filter=@ai-notebook/web --filter=@ai-notebook/server",
    "dev:tauri": "turbo dev:tauri --filter=@ai-notebook/web --filter=@ai-notebook/desktop",
    "build": "turbo build --filter=@ai-notebook/web --filter=@ai-notebook/server",
    "build:tauri": "turbo build:tauri --filter=@ai-notebook/web --filter=@ai-notebook/desktop",
    "lint": "turbo lint",
    "prepare": "simple-git-hooks"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "apps/web/packages/*"
  ],
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/bun": "latest",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.3.1",
    "eslint-plugin-import-x": "^4.16.1",
    "simple-git-hooks": "^2.13.1",
    "turbo": "^2.7.6"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "simple-git-hooks": {
    "commit-msg": "bun commitlint --edit $1"
  },
  "packageManager": "bun@1.3.6"
}
